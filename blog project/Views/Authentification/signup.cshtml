@model blog_project.Models.RegistrationModel


<form asp-action="signup">
  <div class="form-group row">
    <div class="form-group col-md-6">
      <label asp-for="firstName">First Name</label>
      <input name="firstName" type="text" class="form-control" asp-for="firstName" placeholder="First Name">
    </div>
    <div class="form-group col-md-6">
      <label asp-for="lastName">Last Name</label>
      <input name="lastName" type="text" class="form-control" asp-for="lastName" placeholder="Last Name">
    </div>
  </div>
  <div class="form-group row">
    <div class="form-group col-md-6">
      <label asp-for="userName">User Name</label>
      <input type="text" class="form-control" asp-for="userName" name="userName" id="userName" placeholder="User Name">
    </div>
    <div class="form-group col-md-6">
      <label asp-for="email">Email</label>
      <input type="email" asp-for="email" class="form-control" id="email" placeholder="Email">
    </div>
  </div>
  <div class="form-group">
    <label asp-for="password">Password</label>
    <input type="password" class="form-control" name="password" asp-for="password" id="password" placeholder="Password">
  </div>
  <div class="form-group">
    <label class="custom-file-label" asp-for="picture">Picture</label>
    <input type="file" asp-for="picture" name="picture" class="form-control file" id="customFile">
  </div>

  <button type="submit" class="btn btn-primary mt-3">Sign Up</button>
</form>



